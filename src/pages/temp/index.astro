---
import "@/styles/globals.css";
---

<div class="w-screen h-screen bg-black" id="main" />

<script>
  const div = document.querySelector("#main");

  div ?
  div.addEventListener("mousemove", (event) => {
    const x = event.clientX;
    const y = event.clientY;

    const circle = document.createElement("div");
    circle.className = "size-40 bg-white rounded-full absolute";
    // circle.style.width = `${cursorSpeed / 2}px`;
    // circle.style.height = `${cursorSpeed / 2}px`;
    circle.style.left = `${x - 80}px`;
    circle.style.top = `${y - 80}px`;

    setTimeout(() => {
      div.appendChild(circle);
    }, 100);

    setTimeout(() => {
      div.removeChild(circle);
    }, 300);
  }) : null;

</script>
